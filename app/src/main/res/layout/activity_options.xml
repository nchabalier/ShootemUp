<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_options"
    android:background="#2D2D2D"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <Button
        android:text="Sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:id="@+id/buttonSound" />

    <Button
        android:text="Music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/buttonSound"
        android:layout_alignStart="@+id/buttonSound"
        android:id="@+id/buttonMusic" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Options Activity"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/buttonSound"
        android:layout_alignEnd="@+id/buttonSound"
        android:layout_marginTop="12dp" />

    <Button
        android:text="Vibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonVibration"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/buttonMusic"
        android:layout_alignLeft="@+id/buttonMusic"
        android:layout_alignStart="@+id/buttonMusic" />

    <ImageButton
        android:text="Return"
        android:layout_width="65sp"
        android:layout_height="65sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonReturn"
        android:background="@drawable/return_button"/>


</RelativeLayout>
