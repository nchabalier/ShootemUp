<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_store"
    android:background="#2D2D2D"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:text="Store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ccd1d1"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView6" />

    <ImageButton
        android:text="Return"
        android:layout_width="65sp"
        android:layout_height="65sp"
        android:id="@+id/buttonReturn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/return_button"/>

    <TextView
        android:text="Total coins : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ccd1d1"
        android:textSize="20sp"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_toLeftOf="@+id/textView6" />

    <TextView
        android:text="Total Coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#784212"
        android:textSize="20sp"
        android:id="@+id/totalCoinsText"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/textView7" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/textView7" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ccd1d1"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/buttonReturn"
        android:layout_below="@+id/textView7"
        android:id="@+id/coinListView" />


</RelativeLayout>
